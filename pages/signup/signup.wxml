<view class="container">
  <view class="title">球员报名</view>
  <view style="margin-bottom:16px;">
    <text>球员人数：{{playerCount}}</text>
  </view>
  <view style="margin-bottom:16px;">
    <text>球员名单：</text>
    <view wx:for="{{players}}" wx:for-index="idx" wx:for-item="name" wx:key="idx" style="margin-bottom:8px; display:flex; align-items:center;">
      <input placeholder="请输入球员姓名" value="{{name}}" data-idx="{{idx}}" bindinput="updatePlayerName" style="flex:1;" />
      <button size="mini" data-idx="{{idx}}" bindtap="signupPlayer" style="margin-left:8px;">报名</button>
    </view>
  </view>
  <button bindtap="confirmSignup" disabled="{{!canSignup}}">完成报名</button>
</view>