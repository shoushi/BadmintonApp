/**setup.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 30rpx;
}

/* 头部 */
.header {
  padding: 60rpx 0 40rpx;
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}

/* 设置表单 */
.settings-form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.setting-item {
  margin-bottom: 40rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.setting-control {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.number-input {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.btn-decrease,
.btn-increase {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s ease;
}

.btn-decrease:not([disabled]):active,
.btn-increase:not([disabled]):active {
  background: #e0e0e0;
  transform: scale(0.95);
}

.btn-decrease[disabled],
.btn-increase[disabled] {
  background: #f5f5f5;
  color: #ccc;
}

.number-value {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  color: #333;
}

.setting-tip {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 预计信息 */
.preview-info {
  background: rgba(255,255,255,0.2);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-bottom: 24rpx;
}

.preview-cards {
  display: flex;
  gap: 16rpx;
}

.preview-item {
  flex: 1;
  background: rgba(255,255,255,0.3);
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}

.preview-number {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 4rpx;
}

.preview-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding-bottom: 60rpx;
}

.btn-save,
.btn-reset {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.btn-save {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.btn-reset {
  background: rgba(255,255,255,0.2);
  color: white;
  backdrop-filter: blur(10rpx);
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(82, 196, 26, 0.3);
}

.btn-reset:active {
  transform: scale(0.98);
  background: rgba(255,255,255,0.3);
}
