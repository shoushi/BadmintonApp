/**index.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 顶部横幅 */
.header-banner {
  position: relative;
  height: 200rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.bg-pattern {
  width: 100%;
  height: 100%;
  opacity: 0.1;
}

.header-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.app-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.app-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.app-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 状态卡片 */
.status-cards {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.status-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.card-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.card-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.card-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 主要功能区域 */
.main-actions {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: white;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.action-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  border-left: 6rpx solid;
}

.action-item.primary { border-left-color: #4facfe; }
.action-item.success { border-left-color: #52c41a; }
.action-item.info { border-left-color: #1890ff; }
.action-item.warning { border-left-color: #faad14; }

.action-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.2);
}

.action-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
}

.action-arrow {
  font-size: 36rpx;
  color: #ccc;
  font-weight: bold;
}

/* 比赛概况 */
.match-overview {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.overview-cards {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.overview-item {
  flex: 1;
  background: rgba(255,255,255,0.2);
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.overview-number {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 4rpx;
}

.overview-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
}

.progress-bar {
  height: 8rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 快捷工具 */
.tools-section {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.tools-grid {
  display: flex;
  gap: 20rpx;
}

.tool-item {
  flex: 1;
  background: rgba(255,255,255,0.2);
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.tool-item:active {
  transform: scale(0.95);
  background: rgba(255,255,255,0.3);
}

.tool-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tool-name {
  font-size: 24rpx;
  color: white;
}

/* 版本信息 */
.footer-info {
  padding: 40rpx 30rpx;
  text-align: center;
}

.version-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  margin-bottom: 8rpx;
}

.copyright-text {
  font-size: 22rpx;
  color: rgba(255,255,255,0.6);
}
