/* matchTable.wxss */

.match-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 页面头部样式 */
.header-section {
  text-align: center;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 统计卡片样式 */
.stats-cards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 轮次容器样式 */
.rounds-section {
  margin-bottom: 40rpx;
}

.round-container {
  margin-bottom: 40rpx;
}

.round-header {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.round-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.round-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.round-matches {
  font-size: 24rpx;
  color: #7f8c8d;
  background: #ecf0f1;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 比赛列表样式 */
.matches-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.match-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.match-card:hover {
  border-color: #3498db;
  transform: translateY(-4rpx);
}

/* 比赛头部样式 */
.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ecf0f1;
}

.court-info {
  display: flex;
  align-items: center;
}

.court-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.court-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

.match-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.match-status.waiting {
  background: #f39c12;
  color: white;
}

.match-status.playing {
  background: #e74c3c;
  color: white;
}

.match-status.finished {
  background: #27ae60;
  color: white;
}

/* 队伍容器样式 */
.teams-container {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.team {
  flex: 1;
  text-align: center;
}

.team-label {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.players {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.player {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.player.male {
  background: linear-gradient(45deg, #3498db, #2980b9);
  color: white;
}

.player.female {
  background: linear-gradient(45deg, #e91e63, #c2185b);
  color: white;
}

.player-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.player-name {
  font-size: 24rpx;
}

/* VS 分隔符样式 */
.vs-section {
  margin: 0 30rpx;
  text-align: center;
}

.vs-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.vs-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #e74c3c;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 比分区域样式 */
.score-section {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 25rpx;
}

.score-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.score-input-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.score-picker {
  border-radius: 12rpx;
  overflow: hidden;
}

.score-display {
  width: 80rpx;
  height: 60rpx;
  background: white;
  border: 3rpx solid #3498db;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.score-separator {
  margin: 0 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
}

.score-add-btn {
  width: 50rpx;
  height: 50rpx;
  background: #3498db;
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 禁用状态样式 */
.score-picker.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.score-picker.disabled .score-display {
  background: #f8f9fa;
  color: #6c757d;
  border-color: #dee2e6;
}

/* 增强的比分显示 */
.score-display.winning {
  background: rgba(39, 174, 96, 0.2);
  border: 2rpx solid #27ae60;
  color: #27ae60;
  animation: pulse-win 2s infinite;
}

.score-display.losing {
  background: rgba(231, 76, 60, 0.2);
  border: 2rpx solid #e74c3c;
  color: #e74c3c;
}

@keyframes pulse-win {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 比赛控制按钮增强 */
.match-controls {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15rpx;
  margin-top: 20rpx;
}

.control-btn {
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.finish-btn {
  background: #27ae60;
  color: white;
}

.finished-btn {
  background: #95a5a6;
  color: white;
  opacity: 0.7;
}

.reset-btn {
  background: #f39c12;
  color: white;
}

.control-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 统计卡片增强样式 */
.stat-card.completed {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  box-shadow: 0 8rpx 25rpx rgba(39, 174, 96, 0.3);
}

.stat-card.completed .stat-number {
  color: white;
}

.stat-card.completed .stat-label {
  color: rgba(255, 255, 255, 0.9);
}

.stat-card.progress {
  background: linear-gradient(135deg, #3498db, #2980b9);
  box-shadow: 0 8rpx 25rpx rgba(52, 152, 219, 0.3);
}

.stat-card.progress .stat-number {
  color: white;
}

.stat-card.progress .stat-label {
  color: rgba(255, 255, 255, 0.9);
}

/* 已完成比赛的特殊样式 */
.match-card.finished {
  border-left: 4rpx solid #95a5a6;
  background: rgba(149, 165, 166, 0.1);
  opacity: 0.8;
}

.match-card.finished .match-header {
  opacity: 0.7;
}

.match-card.finished .team-info {
  opacity: 0.7;
}

.match-status.finished {
  background: #95a5a6;
  color: white;
  font-weight: bold;
  animation: none;
}

/* 比赛结果显示 */
.match-result {
  text-align: center;
  margin-top: 20rpx;
  padding: 15rpx;
  background: rgba(39, 174, 96, 0.1);
  border-radius: 8rpx;
  color: #27ae60;
  font-weight: bold;
}

/* 已完成比赛的结果样式 */
.match-card.finished .match-result {
  background: rgba(149, 165, 166, 0.15);
  color: #95a5a6;
}

/* 比赛时长显示 */
.match-duration {
  font-size: 22rpx;
  color: #7f8c8d;
  margin-top: 8rpx;
  font-style: italic;
}

/* 比赛状态样式增强 */
.match-status.waiting {
  background: #95a5a6;
  animation: pulse 2s infinite;
}

.match-status.playing {
  background: #e74c3c;
  animation: blink 1s infinite;
}

.match-status.finished {
  background: #27ae60;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.7; }
  100% { opacity: 1; }
}

@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

/* 头部操作按钮 */
.header-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.action-btn {
  padding: 12rpx 30rpx;
  border: none;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.clear-all-btn {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(231, 76, 60, 0.3);
}

.clear-all-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.4);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .teams-container {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .vs-section {
    transform: rotate(90deg);
    margin: 15rpx 0;
  }
  
  .stats-cards {
    flex-direction: column;
  }
}
